{
	"name": "edygar/wp-extensions",
  "type": "wordpress-plugin",
	"authors": [
		{
			"name": "Edygar de Lima Oliveira",
			"email": "edygardelima@gmail.com"
		}
	],
	"require": {
		"beelab/bowerphp": "1.0.*@dev"
	},
	"scripts": {
		"post-package-install": [
			"bowerphp install"
		]
	},
	"autoload": {
		"files": [
			"utils/polyfill.php",
			"utils/console.php",
			"utils/params.php",
			"utils/api.php",
			"utils/html.php",
			"filter.php",
			"search.php",
			"cache.php",
			"taxonomy-metabox.php",
			"taxonomy-metabox/search-n-select.php"
		]
	}
}
